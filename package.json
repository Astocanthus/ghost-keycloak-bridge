{
  "name": "ghost-keycloak-bridge",
  "version": "1.1.0",
  "description": "A bridge to authenticate Ghost members using Keycloak (OIDC)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "docs": "documentation build src/**/*.js -f html -o docs",
    "docs:md": "documentation build src/**/*.js -f md -o API.md",
    "test": "NODE_OPTIONS='--experimental-vm-modules' node node_modules/jest/bin/jest.js",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' node node_modules/jest/bin/jest.js --watch",
    "test:watch-all": "NODE_OPTIONS='--experimental-vm-modules' node node_modules/jest/bin/jest.js --watchAll",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' node node_modules/jest/bin/jest.js --coverage",
    "docker-local": "docker run -it -v ./:/app -w /app node:22-alpine sh -c \"npm install --no-bin-links --include=dev && npm run test:watch-all || tail -f /dev/null\""
  },
  "keywords": [
    "ghost",
    "keycloak",
    "sso",
    "oidc",
    "authentication"
  ],
  "author": "Benjamin Romeo",
  "license": "MIT",
  "devDependencies": {
    "documentation": "^14.0.3",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "express": "^5.2.1",
    "openid-client": "6.8.1",
    "@tryghost/admin-api": "^1.14.4",
    "cookie-parser": "^1.4.7",
    "cookie-signature": "^1.2.1",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.16.0",
    "winston": "^3.19.0"
  }
}